    <refsect1 id="xfwm4.xfconf.general.example">
        <title role="functions_proto.title">Example</title>
        <programlisting language="xml"><![CDATA[
<?xml version="1.0" encoding="UTF-8"?>
<channel name="xfwm4" version="1.0">
  <property name="general" type="empty">
    <property name="activate_action" type="string" value="none"/>
    <property name="borderless_maximize" type="bool" value="true"/>
    <property name="button_offset" type="int" value="0"/>
    <property name="workspace_names" type="array">
      <value type="string" value="one"/>
      <value type="string" value="two"/>
      <value type="string" value="three"/>
      <value type="string" value="four"/>
    </property>
    ...
  </property>
  ...
</channel>
]]>
